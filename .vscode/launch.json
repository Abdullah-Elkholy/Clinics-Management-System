{
  "configurations": [
    {
      "name": "BE only . Backend API (dotnet)",
      "type": "coreclr",
      "request": "launch",
      "targetArchitecture": "x86_64",
      "preLaunchTask": "build-api",
      "program": "${workspaceFolder}/src/Api/bin/Debug/net8.0/Clinics.Api.dll",
      "args": [],
      "cwd": "${workspaceFolder}/src/Api",
      "stopAtEntry": false,
      "console": "integratedTerminal",
      "env": {
        "USE_LOCAL_SQL": "true",
        "LocalSqlServer": "${env:LOCAL_SQL_CONN}",
        "SEED_ADMIN": "true",
        "ASPNETCORE_ENVIRONMENT": "Development",
        "ASPNETCORE_URLS": "http://localhost:5000"
      },
      "launchBrowser": {
        "enabled": true
      }
    },
    {
      "name": "FE only . Frontend (Next.js)",
      "type": "node",
      "request": "launch",
      // "preLaunchTask": "start-frontend",
      "cwd": "${workspaceFolder}/apps/web",
      "runtimeExecutable": "npm",
      "runtimeArgs": [
        "run",
        "dev"
      ],
      "console": "integratedTerminal",
      "env": {}
    }
  ],
  "compounds": [
    {
      "name": "BE + FE (Backend & Frontend)",
      "configurations": [
        "FE only . Frontend (Next.js)",
        "BE only . Backend API (dotnet)"
      ]
    }
  ]
}