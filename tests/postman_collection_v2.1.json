{
  "info": {
    "name": "Clinics API - Quick",
    "_postman_id": "00000000-0000-0000-0000-000000000000",
    "description": "Login, refresh, and admin calls",
    "schema": "https://schema.getpostman.com/json/collection/v2.1.0/collection.json"
  },
  "variable": [
    { "key": "baseUrl", "value": "http://localhost:5000" },
    { "key": "adminUser", "value": "admin" },
    { "key": "adminPass", "value": "Admin123!" }
  ],
  "item": [
    {
      "name": "Login",
      "event": [
        {
          "listen": "test",
          "script": {
            "exec": [
              "var json = pm.response.json();",
              "if (json && json.data && json.data.AccessToken) { pm.environment.set('accessToken', json.data.AccessToken); }",
              "// Postman stores cookies automatically; the refresh cookie will be available for subsequent requests"
            ]
          }
        }
      ],
      "request": {
        "method": "POST",
        "header": [ { "key": "Content-Type", "value": "application/json" } ],
        "body": {
          "mode": "raw",
          "raw": "{ \"username\": \"{{adminUser}}\", \"password\": \"{{adminPass}}\" }"
        },
        "url": "{{baseUrl}}/api/auth/login"
      }
    },
    {
      "name": "Refresh",
      "event": [
        {
          "listen": "test",
          "script": {
            "exec": [
              "var json = pm.response.json();",
              "if (json && json.data && json.data.accessToken) { pm.environment.set('accessToken', json.data.accessToken); }",
              "// Cookies are rotated by the server; Postman keeps them in the cookie jar"
            ]
          }
        }
      ],
      "request": {
        "method": "POST",
        "header": [],
        "url": "{{baseUrl}}/api/auth/refresh"
      }
    },
    {
      "name": "Get Users (admin)",
      "request": {
        "method": "GET",
        "header": [ { "key": "Authorization", "value": "Bearer {{accessToken}}" } ],
        "url": "{{baseUrl}}/api/users"
      },
      "event": [
        {
          "listen": "test",
          "script": {
            "exec": [
              "pm.test('Users returned', function () {",
              "  pm.response.to.have.status(200);",
              "  var json = pm.response.json();",
              "  pm.expect(json.success).to.eql(true);",
              "});"
            ]
          }
        }
      ]
    }
  ]
}
